                    <p class="text-xl lg:text-2xl">
                        <Link
                            umami={{ event: "homepage_email_click" }}
                            href="mailto:me@rayhanadev.com"
                            >me@rayhanadev.com</Link
                        >
                    </p>
                    <p class="text-xl lg:text-2xl">
                        <Link
                            umami={{ event: "homepage_phone_click" }}
                            href="tel:817-470-7345">+1 (817) 470-7345</Link
                        >
                    </p>
                </div>
            </div>
        </div>
