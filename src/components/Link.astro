---
const { href, external = false, ...props } = Astro.props;

export interface Props {
    href: string;
    external?: boolean;
    [key: string]: unknown;
}
---

<a
    href={href}
    {...external ? { rel: "noopener", target: "_blank" } : {}}
    class:list={[
        "underline",
        "decoration-zinc-400",
        "hover:decoration-foreground",
        "inline",
        props.class,
    ]}><slot /></a
>
