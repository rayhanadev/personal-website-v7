---
const { href, external = false, umami, ...props } = Astro.props;

export interface Props {
    href: string;
    external?: boolean;
    umami?: {
        event: string;
    };
    [key: string]: unknown;
}
---

<a
    href={href}
    {...external
        ? {
              rel: "noopener",
              target: "_blank",
              "data-umami-event": "outbound-link-click",
              "data-umami-event-url": href,
          }
        : {}}
    data-umami-event={umami?.event}
    class:list={[
        "underline",
        "decoration-zinc-400",
        "hover:decoration-foreground",
        "inline",
        props.class,
    ]}><slot /></a
>
