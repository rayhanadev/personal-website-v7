{
    "src/content/blog/*.{md,mdx}": [
        "bun run contents:encrypt",
        "git add src/content/blog_encrypted/",
        "bash -c 'git ls-files --cached \"src/content/blog/*.{md,mdx}\" | xargs -r git rm --cached'"
    ],
    "*/**/*.{js,jsx,ts,tsx,astro}": ["astro check"],
    "*/**/*.{js,jsx,ts,tsx,json,css,md,mdx}": ["prettier --write"]
}
